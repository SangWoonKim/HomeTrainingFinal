<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TV_userchange_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="id와 비밀번호를 다시 입력해주세요"
        android:fontFamily="@font/font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_userchange_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ID"
        android:fontFamily="@font/font"
        app:layout_constraintEnd_toEndOf="@+id/TV_userchange_introduce"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TV_userchange_introduce"
        app:layout_constraintTop_toBottomOf="@+id/TV_userchange_introduce" />

    <TextView
        android:id="@+id/TV_userchange_PW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="PW"
        android:fontFamily="@font/font"
        app:layout_constraintEnd_toEndOf="@+id/TV_userchange_ID"
        app:layout_constraintStart_toStartOf="@+id/TV_userchange_ID"
        app:layout_constraintTop_toBottomOf="@+id/TV_userchange_ID" />

    <EditText
        android:id="@+id/ET_alert_userchange_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/TV_userchange_ID"
        app:layout_constraintTop_toBottomOf="@+id/TV_userchange_introduce" />

    <EditText
        android:id="@+id/ET_alert_userchange_PW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/ET_alert_userchange_ID"
        app:layout_constraintStart_toStartOf="@+id/ET_alert_userchange_ID"
        app:layout_constraintTop_toBottomOf="@+id/ET_alert_userchange_ID" />
</androidx.constraintlayout.widget.ConstraintLayout>